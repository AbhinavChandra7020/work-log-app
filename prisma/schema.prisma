generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resource {
  id          String   @id @default(uuid())
  url         String
  type        ResourceType
  embedType   EmbedType
  title       String?
  description String?
  createdAt   DateTime @default(now())
  tasks       Task[]
}

model Task {
  id         String   @id @default(uuid())
  title      String
  column     ColumnType
  order      Int
  resource   Resource? @relation(fields: [resourceId], references: [id])
  resourceId String?
  createdAt  DateTime  @default(now())
}

enum ColumnType {
  TODO
  IN_PROGRESS
  DONE
}

enum ResourceType {
  VIDEO
  WEBSITE
  NOTE
}

enum EmbedType {
  YOUTUBE
  IFRAME
  NONE
}
